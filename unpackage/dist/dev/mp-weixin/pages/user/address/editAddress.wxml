="__l" vue-slots="{{['default']}}"><view class="tui-line-cell"><view class="tui-title">收货地址</view><input class="tui-input" placeholder-class="tui-phcolor" placeholder="请输入详细的收货地址" maxlength="50" type="text" data-event-opts="{{[['input',[['__set_model',['$0','userAddress','$event',[]],['bean']]]]]}}" value="{{bean.userAddress}}" bindinput="__e"/></view></tui-list-cell><tui-list-cell vue-id="7" hover="{{false}}" padding="0" bind:__l="__l" vue-slots="{{['default']}}"><view class="tui-swipe-cell"><view>设为默认地址</view><switch class="{{[bean.isDefault==1?'checked':'']}}" checked="{{bean.isDefault==1}}" color="#39B54A" data-event-opts="{{[['change',[['SetShadow']]]]}}" bindchange="__e"></switch></view></tui-list-cell><view data-event-opts="{{[['tap',[['addAddress',['$event']]]]]}}" class="tui-addr-save text-center" bindtap="__e"><button class="cu-btn bg-blue lg" style="width:80%;">保存收货地址</button></view><block wx:if="{{bean.id}}"><view data-event-opts="{{[['tap',[['deleteAddress',['$event']]]]]}}" class="tui-del text-center" bindtap="__e"><button class="cu-btn bg-red lg" style="width:80%;">删除收货地址</button></view></block></form></view></view>